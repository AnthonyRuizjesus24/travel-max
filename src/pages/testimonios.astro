---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/testimonios.css'
import Scroll from '../components/Scroll.astro'

const testimonios = [
  {
    nombre: " Max Ruiz",
    imagen: "/Max.jpeg",
    comentario: "Una experiencia increíble. Los destinos y servicios fueron de primera calidad.",
    fecha: "20 de junio, 2023",
  },
  {
    nombre: "Fernanda Sanchez",
    imagen: "/fernanda.jpg",
    comentario: "El viaje fue perfecto. Todo estuvo muy bien organizado y el personal fue muy amable.",
    fecha: "15 de julio, 2023",
  },
  {
    nombre: "Carlos Rodríguez",
    imagen: "/images/carlos.jpg",
    comentario: "Recomiendo Travel-Max a todos. El viaje superó mis expectativas en todos los sentidos.",
    fecha: "10 de agosto, 2023",
  },
];
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Testimonios - Travel-Max</title>
    <link rel="stylesheet" href="../styles/global.css">
    <link rel="stylesheet" href="../styles/testimonios.css">
</head>

<body>
    <Header/>
    
    <!-- Sección Hero -->
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-bg-image"></div>
        <div class="hero-content">
            <h1>Testimonios de los Viajeros</h1>
            <p>Explora los lugares más increíbles del mundo con nosotros.</p>
        </div>
        <Scroll/>
    </section>

    <!-- Sección de Testimonios -->
    <section id="testimonios" class="testimonios-section">
        <div class="container">
            <h2 class="section-title">Lo Que Dicen Nuestros Clientes</h2>
            <div class="testimonios-grid">
                {testimonios.map(testimonio => (
                    <div class="testimonio-card">
                        <img src={testimonio.imagen} alt={`Foto de ${testimonio.nombre}`} class="testimonio-imagen" />
                        <div class="testimonio-info">
                            <h3 class="testimonio-nombre">{testimonio.nombre}</h3>
                            <p class="testimonio-fecha">{testimonio.fecha}</p>
                            <p class="testimonio-comentario">"{testimonio.comentario}"</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <Footer/>
</body>
</html>
