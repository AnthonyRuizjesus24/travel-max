---
import '../styles/destinos.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Destinos - Explora Viajes</title>
    <link rel="stylesheet" href="destinos.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha384-VjEeJIUNiKO8GG4I0g0OzAHPc5L4+Hgtqg2owOaiQkPoXvmsZn4lJ7o5tRm7ngNe" crossorigin="anonymous">
</head>
<body>
    <Header/>
    
    <section id="hero">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <h1>Descubre Nuestros Destinos</h1>
            <p>Explora los lugares más increíbles del mundo con nosotros.</p>
        </div>
    </section>

    <section id="destinos" class="destinos-section">
        <div class="container">
            <h2>Destinos Populares</h2>
            <div class="destinos-grid">
                <div class="destino-card">
                    <img src="destino1.jpg" alt="Riviera Maya">
                    <div class="destino-info">
                        <h3>Riviera Maya</h3>
                        <p>Un paraíso tropical lleno de aventuras.</p>
                        <a href="#" class="more-info">Más Información</a>
                    </div>
                </div>
                <div class="destino-card">
                    <img src="destino2.jpg" alt="Tokyo">
                    <div class="destino-info">
                        <h3>Tokyo</h3>
                        <p>La metrópoli que nunca duerme.</p>
                        <a href="#" class="more-info">Más Información</a>
                    </div>
                </div>
                <div class="destino-card">
                    <img src="destino3.jpg" alt="Sydney">
                    <div class="destino-info">
                        <h3>Sydney</h3>
                        <p>Aventuras en la tierra de los canguros.</p>
                        <a href="#" class="more-info">Más Información</a>
                    </div>
                </div>
                <!-- Agrega más destinos aquí -->
            </div>
        </div>
    </section>

    <Footer/>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js" integrity="sha384-CI6Lg05fHJSb60qR7FPZP9h+UCGUnJEV03Nj3l6ABIRNoCMltF1INsO7VpID5XwA" crossorigin="anonymous"></script>
</body>
</html>
